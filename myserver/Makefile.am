if BUILD_TESTS
TESTS_DIR = tests
TESTS = tests/tests_suite$(EXEEXT)
endif

if BUILD_DOC
DOCS = documentation
endif

SUBDIRS = po lib src include $(CONTROL) $(CGI_LIB) binaries $(DOCS) $(TESTS_DIR)

EXTRA_DIST = config.rpath  stdafx.h stdafx.cpp doxygen SConstruct

ACLOCAL_AMFLAGS = -I m4

localedir.h: Makefile
	echo '/* This file is auto-generated by Makefile!  */' >$@
	echo '#define LOCALEDIR "$(localedir)"' >> $@

all: localedir.h
